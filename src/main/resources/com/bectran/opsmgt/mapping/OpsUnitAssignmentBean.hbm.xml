<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>  
	<class name="com.bectran.opsmgt.beans.OpsUnitAssignmentBean" table="ops_unit_assgmnt">

     	<id name="id" type="long" column="id">
				<generator class="native" />
		</id>  		
	
	<property name="userId" type="string" column="userId" />
	<property name="opsUnitId" type="long" column="opsUnitId" />		
	<property name="lastUpdate" type="timestamp" column="lastUpdate" />	
	
	    <many-to-one name="userBean" class="com.bectran.b2b.supplier.beans.SupplierUserBean" update="false"   insert="false" fetch="select" lazy="false">
                 <column name="userId" not-null="true" />
     </many-to-one> 
     
    <many-to-one name="opsUnit" class="com.bectran.opsmgt.beans.OpsUnitDefinitionBean" update="false"   insert="false" fetch="select" lazy="false">
                 <column name="opsUnitId" not-null="true" />
     </many-to-one>      

	</class>

</hibernate-mapping>

 